# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.AuthController.index

# Authentication

POST    /auth/signin                        controllers.AuthController.signIn
POST    /auth/signup                        controllers.AuthController.signUp

# Users API

GET     /api/v1/users                       controllers.UserController.findUsers
GET     /api/v1/users/:id                   controllers.UserController.findUserById(id: Long)
POST    /api/v1/users                       controllers.UserController.createUser

# Social Graph API

GET     /api/v1/followers                   controllers.RelationshipController.findFollowers
GET     /api/v1/friends                     controllers.RelationshipController.findFriends

POST    /api/v1/friends/:userId             controllers.RelationshipController.createRelationship(userId: Long)
DELETE  /api/v1/friends/:userId             controllers.RelationshipController.deleteRelationship(userId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)
