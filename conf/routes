# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Application.index

# Authentication

POST    /login                              controllers.Application.login

# Social Graph API

GET     /api/v1/followers                   controllers.RelationshipController.findFollowers
GET     /api/v1/relationships               controllers.RelationshipController.findRelationships(type: Option[String])

POST    /api/v1/relationships/:userId       controllers.RelationshipController.createRelationship(type: String, userId: Long)
DELETE  /api/v1/relationships/:userId       controllers.RelationshipController.deleteRelationship(type: String, userId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
